#!/usr/bin/env bash

install_packs() {

    apt-get update;
    apt-get install -y --no-install-recommends \
        libpng-dev \
        libjpeg-dev \
        libtiff-dev \
        libltdl-dev \
        libwebp-dev \
        librsvg2-dev \
        libgraphviz-dev \
        libwmf-dev \
        libraw-dev \
        ffmpeg \
        ghostscript \
        gsfonts \
        libgs-dev;

    # dep heif
    apt-get install -y --no-install-recommends \
        libde265-dev \
        libx265-dev;

    # dep jxl
    apt-get install -y --no-install-recommends \
        libgif-dev \
        libopenexr-dev \
        libbrotli-dev;

    # dep imagemagick
    apt-get install -y --no-install-recommends \
        libraqm0 \
        libraqm-dev \
        libgomp1 \
        libfftw3-dev \
        libxext6 \
        liblqr-1-0-dev \
        libzip-dev \
        libice-dev \
        libsm-dev \
        libxml2 \
        libxml2-dev \
        libopenjp2-7-dev \
        liblcms2-dev \
        libbz2-dev \
        libzstd-dev \
        libpango1.0-dev \
        libdjvulibre-dev;

    rm -rf /var/lib/apt/lists/*;

    ln -s /usr/lib/x86_64-linux-gnu/libtiff.so.6 /usr/lib/x86_64-linux-gnu/libtiff.so.5

}