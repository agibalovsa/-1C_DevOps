ARG OS_EXT_TAG=mcr.microsoft.com/windows/servercore:ltsc2022

# hadolint ignore=DL3006
FROM "${OS_EXT_TAG}"

SHELL [ "powershell", "-Command", "$ErrorActionPreference = 'Stop'; $ProgressPreference = 'Continue'; $verbosePreference='Continue';" ]

COPY [ "LogMonitorConfig.json", "/LogMonitor/LogMonitorConfig.json" ]
COPY [ "build_context", "/build_context" ]

RUN . "/build_context/pre_install.ps1" ; \
    Install-Packs ; \
    Remove-Item "/build_context" -Recurse ;

ENTRYPOINT [ "pwsh" ]