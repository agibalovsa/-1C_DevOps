server {

  listen 443 ssl;
  listen [::]:443 ssl;
  http2  on;

  server_name {{ env "NGINX_SERVER_NAME" }};

  ssl_certificate_key /etc/nginx/ssl/nginx.key;
  ssl_certificate     /etc/nginx/ssl/nginx.crt;

  location /gitlab/ {

    client_max_body_size 0;
    gzip off;

    proxy_set_header Host                 $http_host;
    proxy_set_header X-Real-IP            $remote_addr;
    proxy_set_header X-Forwarded-For      $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto    $scheme;
    proxy_set_header X-Forwarded-Protocol $scheme;
    proxy_set_header X-Url-Scheme         $scheme;

    proxy_read_timeout 300;
    proxy_connect_timeout 300;

    proxy_pass https://{{ env "GITLAB_EXTERNAL_URL" }}:{{ env "GITLAB_HTTPS_PORT" }};

  }

  location /sonarqube/ {

    client_max_body_size 5000M;

    proxy_set_header Host                 $host;
    proxy_set_header X-Real-IP            $remote_addr;
    proxy_set_header X-Forwarded-For      $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto    $scheme;
    proxy_set_header X-Forwarded-Protocol $scheme;
    proxy_set_header X-Url-Scheme         $scheme;

    proxy_pass http://{{ env "SONAR_EXTERNAL_URL" }}:{{ env "SONAR_HTTP_PORT" }};

  }

  location /portainer/ {

    client_max_body_size 0;

    proxy_set_header Host                 $host;
    proxy_set_header X-Real-IP            $remote_addr;
    proxy_set_header X-Forwarded-For      $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto    $scheme;
    proxy_set_header X-Forwarded-Protocol $scheme;
    proxy_set_header X-Url-Scheme         $scheme;
    proxy_set_header Upgrade              $http_upgrade;
    proxy_set_header Connection           "upgrade";

    proxy_cache_bypass $http_upgrade;

    proxy_pass https://{{ env "PORTAINER_EXTERNAL_URL" }}:{{ env "PORTAINER_HTTPS_PORT" }}/;

  }

}